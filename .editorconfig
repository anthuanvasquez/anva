# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Add 4 space indentation
[*.{php,css,scss,less,js}]
indent_style = space
indent_size = 4

[*.{js,css,scss,less}]
charset = utf-8

[*.md]
trim_trailing_whitespace = false
